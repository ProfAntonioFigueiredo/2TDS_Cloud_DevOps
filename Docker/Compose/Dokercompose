version: '3.7'

services:

  myapp:
    image: python:3.7
    container_name: myapp-container
    restart: always
    ports:
      - "5000:5000"
    environment:
      - FLASK_APP=main.py
    volumes:
      - ./:/app
    command: flask run --host=0.0.0.0
    depends_on:
      - db

  db:
    image: postgres
    container_name: db-container
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_DB=myapp
    volumes:
      - db-data:/var/lib/postgresql/data/

volumes:
  db-data: